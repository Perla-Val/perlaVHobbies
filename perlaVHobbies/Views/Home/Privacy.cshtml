@{
    ViewData["Title"] = "Calculate";
}
<h1>@ViewData["Title"]</h1>

<h2>If you desire to request my services this will help you calculate my rate</h2>

<form id="calculatorForm">
    <div class="form-group">
        <label for="hours">Number of Hours Needed:</label>
        <input type="number" class="form-control" id="hours" required>
    </div>
    <div class="form-group">
        <label for="hourlyRate">Hourly Rate:</label>
        <input type="text" class="form-control" id="hourlyRate" value="20" readonly>
    </div>
    <button type="submit" class="btn btn-primary">Calculate Total</button>
</form>

<div id="total"></div>

<a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/calculator.js"></script>
